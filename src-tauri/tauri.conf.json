{
    "build": {
        "beforeDevCommand": "yarn dev",
        "beforeBuildCommand": "yarn build",
        "devPath": "http://localhost:1420",
        "distDir": "../dist",
        "withGlobalTauri": false
    },
    "package": {
        "productName": "snaky-app",
        "version": "0.2.0"
    },
    "tauri": {
        "allowlist": {
            "all": false,
            "shell": {
                "all": false,
                "open": true
            },
            "clipboard": {
                "writeText": true
            }
        },
        "bundle": {
            "active": true,
            "targets": "all",
            "identifier": "dev.orewaee.snaky",
            "icon": [
                "icons/icon.ico",
                "icons/icon.png"
            ]
        },
        "security": {
            "csp": null
        },
        "windows": [
            {
                "fullscreen": false,
                "resizable": true,
                "title": "Snaky",
                "width": 960,
                "height": 540,
                "minWidth": 960,
                "minHeight": 540
            }
        ]
    }
}
